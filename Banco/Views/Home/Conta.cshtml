
@{
    ViewData["Title"] = "Conta";
}
@model ContaCorrente;
<html>
<head>
    
</head>
    <body>
        <input type="hidden" id="conta_id" value="@Model.Id" />
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <h5 class="my-0 mr-md-auto font-weight-normal">Venturini Bank</h5>
            <span class="font-weight-normal" id="valorSaldo" style="font: bold; margin-right: 10px">Saldo: @Model.Saldo</span>
            <a class="font-weight-normal" id="valorSaldo" href="/Home/Index">Sair</a>
        </div>

        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h5 class="display-4">Você está em sua conta corrente, @(ViewBag.cliente)</h5>
        </div>

        <div class="container">
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">Saque</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Realize saques de até R$ 2.000,00 ao dia</li>
                        </ul>
                        <input type="number" id="valorSaque" class="form-control" style="margin-bottom: 15px; border: solid" placeholder="Digite o valor"/>
                        <button type="button" class="btn btn-lg btn-block btn-primary" onclick="site.sacar()">Sacar</button>
                    </div>
                </div>
                <div class="card mb-4 shadow-sm">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">Depósitos</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Faça depósitos com agilidade e segurança</li>
                        </ul>
                        <input type="number" id="valorDeposito" class="form-control" style="margin-bottom: 15px; border: solid" placeholder="Digite o valor" />
                        <button type="button" class="btn btn-lg btn-block btn-primary" onclick="site.depositar()">Depositar</button>
                    </div>
                </div>
                <div class="card mb-4 shadow-sm">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">Transferências</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Dados do Beneficiário</li>
                        </ul>
                        <input type="number" id="clienteAgencia" class="form-control" style="margin-bottom: 15px; border: solid" placeholder="Agência" />
                        <input type="number" id="clienteConta" class="form-control" style="margin-bottom: 15px; border: solid" placeholder="Conta" />
                        <input type="number" id="valorTransferencia" class="form-control" style="margin-bottom: 15px; border: solid" placeholder="Digite o valor" />
                        <button type="button" class="btn btn-lg btn-block btn-primary" onclick="site.transferir()">Transferir</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
<script src="~/js/site.js"></script>
